@using System.Security.Claims;

<div class="p-3 mb-2 bg-primary text-white">Welcome @User.FindFirstValue(ClaimTypes.Role) !! </div>

<table class="table table-bordered">
    <thead>


        <tr>
            <th>
                Total Number Of Student
            </th>
            <th>
                Total Number Of User
            </th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @ViewBag.Count
            </td>
            <td>
                @ViewBag.Stucount
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-sm  btn-primary m-2" id="btnStuden">Add Student </button>
            </td>
            <td>
                <button class="btn btn-sm  btn-primary m-2" id="btnStudent">Create User </button>
            </td>
        </tr>
        
    </tbody>
</table>


<div class="card-body">
    <div class="modal fade" id="ShowStudent">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="text-info modal-title text-end">
                        Add User
                    </h1>

                    <button type="button" class="close border-danger" data-bs-dismiss="modal" aria-label="Close">

                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body"></div>
                <form method="post">
                    <div class="form-group col-md-11 align-content-center" style="margin-left:10px">
                        <label>
                            Email
                        </label>
                        <input  type="text" placeholder="Enter the Email here " class="form-control" id="Email" />
                    </div>

                    <div class="form-group col-md-11 align-content-center" style="margin-left:10px">
                        <label>
                            Password
                        </label>
                        <input type="password" placeholder="Enter the Password " class="form-control" id="Password" />
                    </div>
                    <div class="form-group col-md-11 align-content-center" style="margin-left:10px">
                        <label>
                            Role
                        </label>
                        <input type="text" placeholder="Enter the Role " class="form-control" id="Role" />
                    </div>

                </form>




                <div class="modal-footer">
                    <button class="btn btn-primary" onclick="AddStudents()" id="AddStudent">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    @*  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> *@

                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $('#btnStudent').click(function () {
        debugger
        $('#ShowStudent').modal('show');
    })

    function AddStudents() {
        if ($('#Email').val() == '') {
            alert("email is required");
            return;
        }
        if ($('#Password').val() == '') {
            alert("password is required");
            return;
        }
        if ($('#Role').val() == '') {
            alert("role is required");
            return;
        }
        var objData = {

            Email: $('#Email').val(),
            Password: $('#Password').val(),
            RollName: $('#Role').val(),
        }

        $.ajax({
            dataType: 'json',
            type: 'Post',
            url: '/Role/Create',
            data: objData,


            success: function () {
                //console.log("xx", objData);
                alert('Data saved');
            },
            false: function () {
                alert("data not saved");
            }


        })
    }
</script>


